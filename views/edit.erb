<form method="post" action="/pizza-orders/<%= @order.id %>/edit/update">
  <label for="first_name">First Name:</label>
  <input id="first_name" type="text" name="first_name"
         placeholder="<%= @order.first_name %>"/>

  <label for="last_name">Last Name:</label>
  <input id="last_name" type="text" name="last_name"
         placeholder="<%= @order.last_name %>"/>

  <label for="pizza-select">Select a pizza:</label>
  <select id="pizza-select" name="topping">
    <option value="Margharita">Margharita</option>
    <option value="Calzone">Calzone</option>
  </select>

  <label for="quantity">Quantity:</label>
  <input id="quantity" type="number" name="quantity"
         placeholder="<%= @order.quantity %>"/>

  <input type="submit" value="update order"/>

</form>
